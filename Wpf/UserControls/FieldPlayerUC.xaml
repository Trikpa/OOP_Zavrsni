<UserControl
	x:Class="Wpf.UserControls.FieldPlayerUC"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:Wpf.UserControls"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DesignHeight="40"
	d:DesignWidth="40"
	mc:Ignorable="d" MouseLeftButtonUp="UserControl_MouseLeftButtonUp">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition Height="0.3*" />
		</Grid.RowDefinitions>

		<Rectangle
			x:Name="rectTeamColor"
			Grid.Row="0"
			Width="35"
			Height="30"
			Panel.ZIndex="-3"
			Fill="CornflowerBlue" />
		<Image
			x:Name="playerImg"
			Grid.Row="0"
			Width="40"
			Height="30"
			Source="{StaticResource imgDefaultProfilePicture}" />

		<Label
			x:Name="lblPlayerName"
			Grid.Row="1"
			Padding="0"
			HorizontalContentAlignment="Center"
			VerticalContentAlignment="Center"
			Content="Mario Mandzukic (19)"
			FontSize="6"
			FontWeight="Bold"
			Foreground="Black" />
	</Grid>
</UserControl>
